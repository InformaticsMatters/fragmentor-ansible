---

# The Nextflow configuration file.
# Rendered as 'config' in '$HOME/.nextflow'

kind: ConfigMap
apiVersion: v1
metadata:
  name: nextflow-config
  namespace: {{ fp_namespace }}
data:
  config: |
    process {
      container = 'busybox:latest'
      executor = 'k8s'
    }
    k8s {
        serviceAccount = 'fragmentor'
        storageClaimName = 'work'
        storageMountPath = '/work'
    }
