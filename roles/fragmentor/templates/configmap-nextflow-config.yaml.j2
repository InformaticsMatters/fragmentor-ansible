---

# The Nextflow configuration file
# placed in the player-container user's home directory
# as the file 'nextflow.config'.

kind: ConfigMap
apiVersion: v1
metadata:
  name: nextflow-config
  namespace: {{ fc_namespace }}
data:
  config: |
    process {
      container = 'busybox:latest'
      executor = 'k8s'
    }
    k8s {
        serviceAccount = 'fragmentor'
        storageClaimName = 'work'
        storageMountPath = '/work'
    }
